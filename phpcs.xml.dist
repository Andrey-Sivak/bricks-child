<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="WordPress Coding Standards for Bricks Child Theme" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/squizlabs/PHP_CodeSniffer/master/phpcs.xsd">

	<description>Coding standards for Bricks Child Theme</description>

	<!-- Avoid noisy deprecation notices from sniffs on newer PHP -->
	<ini name="error_reporting" value="E_ALL &amp; ~E_DEPRECATED" />

	<!-- Scan everything except vendor/node_modules/build and non-PHP assets -->
	<file>.</file>
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/node_modules/</exclude-pattern>
	<exclude-pattern>/assets/</exclude-pattern>
	<exclude-pattern>*.js</exclude-pattern>
	<exclude-pattern>*.json</exclude-pattern>
	<exclude-pattern>style.css</exclude-pattern>

	<!-- WordPress coding standards (Extra) -->
	<rule ref="WordPress-Extra" />

	<!-- Enforce text domain for i18n -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="bricks-child"/>
			</property>
		</properties>
	</rule>

	<!-- Enforce prefixing for globals/functions/classes/constants/etc. -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="bricks_child"/>
			</property>
		</properties>
	</rule>

	<!-- Whitespace strictness -->
	<rule ref="WordPress.WhiteSpace.ControlStructureSpacing">
		<properties>
			<property name="blank_line_check" value="true" />
		</properties>
	</rule>

	<!-- PHP compatibility checks for WordPress context -->
	<rule ref="PHPCompatibilityWP">
		<properties>
			<!-- Target PHP version: adjust if you raise your pluginâ€™s minimum -->
			<property name="testVersion" value="7.4-"/>
			<!-- Set minimum supported WP version (align with plugin readme/headers) -->
			<property name="minimum_supported_wp_version" value="6.0"/>
		</properties>
	</rule>

	<!-- Make sure WordPress functions are safe for installations before WP 6.0 -->
    <config name="minimum_wp_version" value="6.0"/>
</ruleset>
